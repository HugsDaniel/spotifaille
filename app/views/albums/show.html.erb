<p id="notice"><%= notice %></p>

<img src="<%= @album.cover %>" alt="" width="400">
<p>
  <strong>Name:</strong>
  <%= @album.name %>
</p>

<p>
  <strong>Artist:</strong>
  <%= @album.artist %>
</p>

<p>
  <strong>Songs:</strong>
  <ul>
    <% @album.songs.each do |song| %>
      <li><%= song.title %> (<%= song.duration %> min)</li>
    <% end %>
  </ul>
</p>

<%= link_to 'Edit', edit_album_path(@album) %> |
<%= link_to 'Back', albums_path %>
